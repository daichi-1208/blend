<br>
<h1 class="text-center">テーマ一覧 <i class="fas fa-wine-bottle fa-fw"></i></h1>
<br>
<div class="row">
    <% @themes.each do |theme| %>
        <div class="col-4 mb-2">
            <div class="text-center">
                <%= link_to theme_path(theme.id) do %><%= attachment_image_tag theme, :image, :fill, 200, 150, format: "jpg", class: "img-thumbnail" %>
                <% end %>
                <br><%= theme.name %>
            </div>
        </div>
    <% end %>
</div>