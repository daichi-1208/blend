<br>
<h3 class="text-center"><strong>マスターのおまかせテーマ</strong></h3><br>
<div class="row">
    <div class="col-6-master">
    </div>
    <div class="col-6">
        <div class="text-center random-theme-1">
            <% @random.each do |t| %>
                <div>
                    <%= attachment_image_tag t, :image, size:"300x280", fallback: "no_image.jpg", class: "img-thumbnail" %><br><br>
                    <%= link_to "このテーマでカクテルを作ってみる", new_theme_post_path(t.id), class:"btn btn-dark", type: "button" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br>
<br>
<div class="new-post-top6">
    <div class="text-center">
    <h3><strong>新着投稿</strong></h3>
        <div class="row">
            <% @new_posts.each do |n| %>
                <div class="col-4 mb-1">
                    <%= link_to theme_post_path(n.theme.id, n.id) do %><%= attachment_image_tag n, :image, size:"150x150", fallback: "no_image.jpg", class: "img-thumbnail" %><br>
                    <% end %>
                    <font color=red>New</font> <%= n.name %><br>
                    <i class="far fa-star fa-fw star-color"></i><%= n.favorites.count%>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br>
<div class="row">
    <div class="post-rank col-6">
        <div class="text-center">
            <h3><i class="fas fa-glass-martini-alt fa-fw"></i>Cocktail Ranking</h3>
            <% @post_ranks.each.with_index(1) do |post, i| %>
                <table class="table">
                    <tr>
                        <td>
                            <strong>No.<%= i %></strong> 
                            <i class="far fa-star fa-fw"><%= post.favorites.count %></i>
                            <%=link_to theme_post_path(post.theme.id, post.id) do %>
                            <%= post.name %>
                        </td>
                        <% end %>
                    </tr>
                </table>
            <% end %>       
        </div>
    </div>
    <div class="user-rank col-6">
        <div class="text-center">
            <h3><u class="fas fa-trophy fa-fw"></u>Best bartender</h3>
            <% @user_ranks.each.with_index(1) do |user, u| %>
                <table class="table">
                    <tr>
                        <td><strong>No.<%= u %></strong>
                        <i class="far fa-thumbs-up fa-fw"><%= user.followers.count %></i>
                        <%= link_to user_path(user.id) do%><%= user.name %></td>
                        <% end %>
                    </tr>
                </table>
            <% end %>  
        </div>
    </div>
</div>