<br>
<div class="row">
    <div class="col-7">
        <div class="text-center">
            <%= attachment_image_tag @post, :image, :fill, 230, 200, size:"300x300", fallback: "no_image.jpg" %>
        </div>
    </div>
    <div class="col-5">
        <h5><%= @post.user.name %> さんが作りました</h5>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@post.user) do %>
                        <%= attachment_image_tag @post.user, :image, size:"130x130", fallback: "no_image.jpg" %>
                        <% end %>
                    </td>
                    <td>
                        <%= @post.user.introduction %>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="fav-user">
            <p>バーテンダー戦闘力:</p>
            <p class="text-center">お気に入り登録</p>
        </div>
    </div>
</div>

<div class="text-center">
    <div class="row">
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <h2><strong><%= @post.name %></strong></h2>
                    </td>
                </tr>
                <tr>
                    <td><h3><strong>説明文</h3></strong></td>
                <tr>
                    <td>
                        <h3><%= @post.introduction %></h3>
                    </td>
                </tr>
                <tr>
                                    <% @post.materials.each do |m| %>
                                        <%= m.name %>
                                        <%= m.quantity %>ml
                                    <% end %>
            </tbody>
        </table>
    </div>
</div>
<!-- 追加 -->
<% if user_signed_in? %>
    <% if @post.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
        <p><span>お気に入り解除: </span><%= link_to @post.favorites.count, theme_post_favorites_path(@post.theme.id, @post.id), method: :delete %></p>
        <% else %>
        <p><span>お気に入り登録: </span><%= link_to @post.favorites.count, theme_post_favorites_path(@post.theme.id, @post.id), method: :post %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= @post.favorites.count %></p>
<% end %>
<!-- ここまで -->