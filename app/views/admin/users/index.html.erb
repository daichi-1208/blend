<h1>ユーザー一覧</h1>

<table class="table">
    <thead>
        <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= link_to admin_user_path(user.id) do %><%= user.name %>
                    <% end %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <% if user.is_deleted? %>
                        <p>退会</p>
                        <% else %>
                        <p>有効</p>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>