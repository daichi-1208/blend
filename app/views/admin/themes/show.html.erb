<div class="container admin-theme-show">
	<h1>お題詳細</h1>
	<div class="row">
		<div class="image col-5 ">
		<%= attachment_image_tag @theme, :image, :fill, 300, 250 %>
		</div>
		<div class="item_introduce col-7">
			<p class="name">
                お題:<%= @theme.name %>
            </p>
			<p class="introduction">
				お題説明:<%= @theme.introduction %>
			</p>
			<p class ="is_active">
				<% if @theme.is_active %>
                    <p>公開中</p>
                    <% else %>
                    <p>非公開</p>
                <% end %>
            </p>
		</div>
		<div class="edit-btn">
		<%= link_to '編集する', edit_admin_theme_path(@theme), class:"btn btn-outline-primary" %>
		</div>
	</div>
</div>